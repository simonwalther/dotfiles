# Utilities
alias r!='. ~/.zshrc'
alias mkdir='mkdir -p'
alias vi='vim'
alias l='ls'
alias ll='ls -l'
alias la='ls -al'
alias -g G='| grep'
alias -g M='| less'
alias cls='clear'

# Git
alias g='git'
compdef _git g=git
alias gst='git status'
compdef _git gst=git-status
alias gc='git commit'
compdef _git gc=git-commit
alias gc!='git commit --amend'
compdef _git gc!=git-commit
alias gap='git add --patch'
compdef _git gap=git-commit
alias gp='git push'
compdef _git gp='git push'
alias gup='git pull'
compdef _git gup='git pull'

# Powder
alias passt='passenger start -p 3000'
alias powsf='powder restart && passenger start -p 3000'
alias stprj='bundle install && bundle exec rake db:migrate || bundle exec rake db:create || echo there isnt rake in this project'
